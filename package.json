{
  "name": "homepage",
  "version": "6.0.0",
  "private": true,
  "homepage": "https://github.com/rejas/",
  "author": {
    "name": "rejas",
    "url": "https://github.com/rejas/"
  },
  "pre-push": [
    "test"
  ],
  "scripts": {
    "--- MAIN SCRIPTS ---": "------------------------------------------------------------",
    "start": "npm run dev",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 0",
    "--- AASTRO SCRIPTS ---": "----------------------------------------------------------",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "--- NPM SCRIPTS ---": "-------------------------------------------------------------",
    "format": "prettier --write --ignore-unknown *.{js,json} \"src/**/*.{astro,css,js,jsx,mdx}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "update": "npm-check -u"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.8",
    "@astrojs/netlify": "^6.1.0",
    "@astrojs/react": "^4.2.0",
    "@bigheads/core": "^0.3.3",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "astro": "^5.2.5",
    "fslightbox-react": "^1.7.6",
    "prettier-plugin-astro": "^0.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-yaml": "^4.1.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-check": "^6.0.1",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
