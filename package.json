{
  "name": "homepage",
  "version": "7.0.0",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/rejas/",
  "author": {
    "name": "rejas",
    "url": "https://github.com/rejas/"
  },
  "pre-push": [
    "test"
  ],
  "scripts": {
    "--- MAIN SCRIPTS ---": "------------------------------------------------------------",
    "start": "npm run dev",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 0",
    "--- ASTRO SCRIPTS ---": "----------------------------------------------------------",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "--- NPM SCRIPTS ---": "-------------------------------------------------------------",
    "format": "prettier --write --ignore-unknown *.{js,json} \"src/**/*.{astro,css,js,jsx,mdx}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "update": "npm-check -u"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/netlify": "^6.5.11",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@bigheads/core": "^0.3.3",
    "@fontsource-variable/josefin-sans": "^5.2.8",
    "@fontsource-variable/rubik": "^5.2.8",
    "@fontsource/josefin-sans": "^5.2.8",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "astro": "^5.14.4",
    "astro-opengraph-images": "^1.13.1",
    "astro-seo": "^0.8.4",
    "github-webcomponents": "^1.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tw-to-css": "^0.0.12"
  },
  "devDependencies": {
    "@rollup/plugin-yaml": "^4.1.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "npm-check": "^6.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "sharp": "^0.34.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
