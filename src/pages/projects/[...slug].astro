---
import { type CollectionEntry, getCollection } from 'astro:content';

import '../../styles/content.css';

import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import Pill from '../../components/Pill.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { render } from 'astro:content';

interface Props {
	entry: CollectionEntry<'projects'>;
}

// This is a dynamic route that generates a page for every Markdown file in src/content/
// Read more about dynamic routes and this `getStaticPaths` function in the Astro docs:
// https://docs.astro.build/en/core-concepts/routing/#dynamic-routes
export async function getStaticPaths() {
	const projects = await getCollection('projects');
	return projects.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const last_modified = entry.data.last_modified
	? entry.data.last_modified.toLocaleDateString('de-DE', { day: '2-digit', month: 'long', year: 'numeric' })
	: '';
---

<BaseLayout title={entry.data.title} description={entry.data.lead} lang={entry.data.lang} last_modified={last_modified}>
	<div class="stack gap-20">
		<div class="stack gap-15">
			<header>
				<div class="wrapper stack gap-2">
					<a class="back-link" href="/projects/"><Icon icon="arrow-left" /> Projects</a>
					<Hero title={entry.data.title} align="start">
						<div class="details">
							<p>{entry.data.lead}</p>
							<div class="tags">
								{entry.data.tags.map((t) => <Pill>{t}</Pill>)}
							</div>
						</div>
					</Hero>
				</div>
			</header>
			<main class="wrapper">
				<div class="stack gap-10 content">
					{entry.data.img && <Image src={entry.data.img} alt={entry.data.img_alt || ''} />}
					<div class="content">
						<Content />
					</div>
				</div>
			</main>
		</div>
	</div>
</BaseLayout>
