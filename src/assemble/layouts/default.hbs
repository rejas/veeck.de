<!doctype html>
<html class="no-js" lang="{{lang}}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{{title}} | {{site.title}}</title>
        <meta name="description"        content="{{lead}}">
        <meta name="viewport"           content="width=device-width, initial-scale=1">
        <meta name="theme-color"        content="#E6E6E6">
        <meta property="og:title"       content="{{title}} - {{lead}}" />
        <meta property="og:type"        content="website" />
        <meta property="og:url"         content="https://www.veeck.de/{{page.stem}}.html" />
        <meta property="og:image"       content="https://www.veeck.de/img/backgrounds/{{img}}" />
        <meta property="og:site_name"   content="Veeck" />
        <meta name="twitter:card"       content="summary">
        <link rel="apple-touch-icon"    href="apple-touch-icon.png">
        <!-- inject:css -->
        <link rel="stylesheet"          href="css/bundle.css" />
        <!-- endinject -->
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-431999-1', 'auto');
            ga('send', 'pageview');
        </script>
    </head>
    <body>
        <div class="intro-effect-side js-intro-effect-side">
            {{> header }}
        </div>

        {% body %}

        {{> footer }}

        <script src="js/vendor.min.js"></script>
        <!-- inject:js -->
        <script src="js/bundle.js"></script>
        <!-- endinject -->
    </body>
</html>
