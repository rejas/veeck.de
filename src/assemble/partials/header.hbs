<header class="header">
    <div class="js-img-liquid bg-img" data-color="{{img-color}}">
        <img src="img/backgrounds/{{img}}" alt="Background Image"/>
    </div>
    <div class="header--wrapper title {{titlestyle}}">
        <h1 class="headline" data-heading="{{heading}}">{{heading}}</h1>
        {{#if lead}}<p class="subline">{{lead}}</p>{{/if}}
        {{#if when}}<p>when <strong>{{when}}</strong></p>{{/if}}
        {{#if where}}<p>where <strong>{{where}}</strong></p>{{/if}}
        {{#if what}}<p>what <strong>{{what}}</strong></p>{{/if}}
    </div>

    {{> nav }}

    <div class="trigger js-trigger">
        <button class="btn btn--l btn--comic" type="button" title="Show content">
            <i class="icon icon--xs icon-arrow-down"></i>
        </button>
    </div>
    <share-button class="btn btn--l btn--comic share-btn"></share-button>
    <button class="btn btn--l btn--comic to-top-btn js-to-top" href="#" type="button" title="Back to top">
        <i class="icon icon--xs icon-arrow-up"></i>
    </button>
</header>
