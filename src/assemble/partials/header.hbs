<header class="header">
    <div class="js-img-liquid bg-img" data-color="{{img-color}}">
        <img src="img/backgrounds/{{img}}" alt="Background Image"/>
    </div>
    <div class="title">
        <h1 class="headline1">{{heading}}</h1>
        {{#if lead}}<p class="subline">{{lead}}</p>{{/if}}
        {{#if when}}<p>when <strong>{{when}}</strong></p>{{/if}}
        {{#if where}}<p>where <strong>{{where}}</strong></p>{{/if}}
        {{#if what}}<p>what <strong>{{what}}</strong></p>{{/if}}
    </div>

    {{> nav }}

    <div class="trigger js-trigger">
        <button class="btn btn--l btn--comic icon-font-more" type="button" title="Show content"></button>
    </div>
    <share-button class="btn btn--l btn--comic share-btn"></share-button>
    <button class="btn btn--l btn--comic icon-font-up to-top-btn js-to-top" href="#" type="button" title="Back to top"></button>
</header>
