<header class="header">
    <div class="js-img-liquid bg-img"><img src="img/backgrounds/{{img}}" alt="Background Image"/></div>
    <div class="title">
        <h1 class="headline1">{{heading}}</h1>
        {{#if lead}}<p class="subline">{{lead}}</p>{{/if}}
        {{#if when}}<p>when <strong>{{when}}</strong></p>{{/if}}
        {{#if where}}<p>where <strong>{{where}}</strong></p>{{/if}}
        {{#if what}}<p>what <strong>{{what}}</strong></p>{{/if}}
    </div>

    {{> nav }}

    <button class="trigger"><i class="icon"></i>Trigger</button>
    <share-button class="share-btn"></share-button>
    <a class="to-top-btn js-to-top" href="#">back to top</a>
</header>
