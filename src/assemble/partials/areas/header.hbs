
<div class="header__image">
    {{> filters }}
    {{> img-srcset }}
</div>

<header class="header" data-color="{{img-color}}">

    <div class="header__title header__title--{{titlestyle}}">
        <h1 class="h1 header__headline" data-heading="{{heading}}">{{heading}}</h1>
        {{#if lead}}<p class="header__subtitle">{{lead}}</p>{{/if}}
        {{#if when}}<p class="header__subtitle">wann _ <strong>{{when}}</strong></p>{{/if}}
        {{#if where}}<p class="header__subtitle">wo _ <strong>{{where}}</strong></p>{{/if}}
        {{#if what}}<p class="header__subtitle">was _ <strong>{{what}}</strong></p>{{/if}}
    </div>
</header>
